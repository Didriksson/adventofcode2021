doctype html
html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/style.css")
        title Advent of Code 2021
    body
        main.container.aoc-bg-color
            .d-flex.align-items-center.p-3.my-3.text-white.rounded.shadow-sm.aoc-bg-color
                    a(href="/")
                        img.me-3(src="/img/santa.png" alt width="48" height="48")
                    h1.d-flex.align-items-center God Jul - Lucka #{dag}
            unless resultA !== undefined || resultB !== undefined
                .my-3.p-3.rounded.shadow-sm
                    form(method="POST" action="/lucka/"+dag).input-form
                        label.border-bottom.pb-2.mb-0(for="input") Input
                        textarea.d-flex.flex-grow(id="input" name="input" type="text")
                        button.mt-2.rounded(type="submit") Submit
                    a(href="/")
                        button.mt-2.rounded Back
            else
                .my-3.p-3.rounded.shadow-sm.aoc-bg-color
                    .my-3.p-3.bg-body.rounded.shadow-sm
                        h2.mb-2 Result
                        h5 Part A
                        strong Result: 
                        p.mb-1 #{resultA}
                        strong Time:
                        p #{timeA} ms
                        h5 Part B
                        strong Result: 
                        p.mb-1 #{resultB}
                        strong Time:
                        p #{timeB} ms
                    a(href="/lucka/"+dag)
                        button.m-3.rounded Back

    

        